(define tolerance 0.000001)
(define (fixed-point f first-guess)
  (define (close-enough? v1 v2)
    (< (abs (- v1 v2)) tolerance))
  (define (try guess cnt)
    (let ((next (f guess)))
      (display next)
      (display ":")
      (display cnt)
      (newline)
      (if (close-enough? guess next)
          next
          (try next (+ cnt 1)))))
  (try first-guess 0))

